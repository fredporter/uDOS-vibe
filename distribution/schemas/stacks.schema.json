{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "uDOS Distribution Stacks Schema",
  "description": "Schema for defining uDOS installation tiers and components",
  "type": "object",
  "required": ["version", "stacks", "components"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version"
    },
    "description": {
      "type": "string"
    },
    "updated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "stacks": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/stack"
      }
    },
    "components": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/component"
      }
    }
  },
  "definitions": {
    "stack": {
      "type": "object",
      "required": ["id", "name", "description", "size_mb", "components", "features", "requires"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z_]+$"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "size_mb": {
          "type": "integer",
          "minimum": 1
        },
        "components": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tcz_packages": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "\\.tcz$"
          }
        },
        "pip_extras": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "app_package": {
          "type": "string"
        },
        "features": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        },
        "requires": {
          "type": "object",
          "properties": {
            "python": {
              "type": "string"
            },
            "storage_mb": {
              "type": "integer"
            },
            "internet": {
              "oneOf": [
                {"type": "boolean"},
                {"type": "string"}
              ]
            },
            "api_keys": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "system_deps": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "platform": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "always_on": {
              "type": "boolean"
            },
            "paired_device": {
              "type": "boolean"
            }
          }
        },
        "best_for": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "default": {
          "type": "boolean"
        },
        "realm": {
          "type": "string",
          "enum": ["user_mesh", "wizard"]
        }
      }
    },
    "component": {
      "type": "object",
      "required": ["id", "name", "description", "size_mb"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tcz": {
          "type": "string",
          "pattern": "\\.tcz$"
        },
        "app": {
          "type": "string"
        },
        "size_mb": {
          "type": "integer",
          "minimum": 1
        },
        "required": {
          "type": "boolean"
        },
        "pip_deps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "system_deps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "realm": {
          "type": "string",
          "enum": ["user_mesh", "wizard"]
        }
      }
    }
  }
}
