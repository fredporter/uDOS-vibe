{
  "id": "sonic",
  "name": "Sonic Screwdriver",
  "version": "1.0.1",
  "description": "USB boot stick builder + device catalog for uDOS (Ventoy + v2 layouts).",
  "category": "device_tools",
  "type": "container",
  "source": "library/sonic",
  "license": "MIT",
  "homepage": "https://github.com/fredporter/uDOS-vibe",
  "documentation": "sonic/docs/README.md",
  "maintainer": "Fred Porter / uDOS",
  "keywords": ["usb", "builder", "ventoy", "alpine", "windows", "device-catalog"],
  "features": {
    "device_catalog": true,
    "flash_packs": true,
    "partition_layouts": true,
    "payload_pipeline": true
  },
  "wizard_commands": [
    "SONIC PLAN",
    "SONIC RUN",
    "SONIC STATUS"
  ],
  "system_requirements": {
    "cpu": "x86_64",
    "memory": "4GB+",
    "storage": "USB 64GB+ recommended",
    "platforms": ["linux", "alpine", "ubuntu"]
  },
  "dependencies": ["bash", "python3", "parted", "rsync"],
  "installation": {
    "method": "apk",
    "script": "wizard/tools/sonic_setup.py"
  }
}
