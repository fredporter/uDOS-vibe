{
  "usb_device": "/dev/sdb",
  "boot_mode": "uefi-native",
  "repo_root": "/path/to/sonic",
  "payload_dir": "/path/to/sonic/payloads",
  "iso_dir": "/path/to/sonic/ISOS",
  "flash_label": "FLASH",
  "sonic_label": "SONIC",
  "esp_label": "ESP",
  "dry_run": false,
  "format_mode": "full",
  "auto_scale": false,
  "partitions": [
    { "name": "esp", "label": "ESP", "fs": "fat32", "size_gb": 0.5, "flags": ["boot", "esp"], "format": true, "role": "efi", "payload_dir": "payloads/efi" },
    { "name": "udos_ro", "label": "UDOS_RO", "fs": "squashfs", "size_gb": 8, "image": "payloads/udos/udos.squashfs", "format": true, "role": "udos" },
    { "name": "udos_rw", "label": "UDOS_RW", "fs": "ext4", "size_gb": 8, "format": true, "mount": "/mnt/udos", "role": "udos", "scalable": true, "min_size_gb": 4, "payload_dir": "payloads/udos/rw" },
    { "name": "swap", "label": "SWAP", "fs": "swap", "size_gb": 8, "format": true, "role": "swap" },
    { "name": "wizard", "label": "WIZARD", "fs": "ext4", "size_gb": 20, "format": true, "mount": "/mnt/wizard", "role": "wizard", "payload_dir": "payloads/wizard" },
    { "name": "win10", "label": "WIN10", "fs": "ntfs", "size_gb": 48, "format": true, "role": "windows", "scalable": true, "min_size_gb": 32, "payload_dir": "payloads/windows" },
    { "name": "media", "label": "MEDIA", "fs": "exfat", "size_gb": 28, "format": true, "mount": "/mnt/media", "role": "media", "scalable": true, "min_size_gb": 12, "payload_dir": "payloads/media" },
    { "name": "cache", "label": "CACHE", "fs": "ext4", "remainder": true, "format": true, "mount": "/mnt/cache", "role": "cache", "scalable": true, "min_size_gb": 4, "payload_dir": "payloads/cache" }
  ]
}
