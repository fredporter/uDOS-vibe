{
  "pack_id": "windows10-entertainment",
  "name": "Windows 10 Entertainment Stack",
  "version": "1.1.0",
  "description": "Dual-mode Windows Media/Game layout with uDOS boot/core partitions.",
  "created_at": "2026-02-06T00:00:00Z",
  "target": {
    "platform": "windows10-entertainment",
    "boot_mode": "uefi",
    "controller": "xinput"
  },
  "layout": {
    "format_mode": "gpt",
    "auto_scale": false,
    "partitions": [
      {
        "label": "uDOS_BOOT",
        "fs": "fat32",
        "size_gb": 1,
        "role": "boot",
        "flags": [
          "boot",
          "esp"
        ],
        "remainder": false
      },
      {
        "label": "uDOS_CORE",
        "fs": "ext4",
        "size_gb": 16,
        "role": "udos",
        "flags": null,
        "remainder": false
      },
      {
        "label": "WINDOWS_MEDIA",
        "fs": "ntfs",
        "size_gb": 80,
        "role": "media",
        "flags": null,
        "remainder": false
      },
      {
        "label": "WINDOWS_GAMES",
        "fs": "ntfs",
        "size_gb": null,
        "role": "games",
        "flags": null,
        "remainder": true
      }
    ]
  },
  "payloads": {
    "base_dir": "payloads",
    "validate": true,
    "checksum_file": "payloads.sha256",
    "partitions": [
      {
        "label": "uDOS_BOOT",
        "source_dir": "payloads/efi",
        "mode": "rsync",
        "validate_checksums": true
      },
      {
        "label": "uDOS_CORE",
        "source_dir": "payloads/udos-core",
        "mode": "rsync",
        "validate_checksums": true
      }
    ]
  },
  "windows": {
    "mode": "wim",
    "iso_path": "payloads/windows/windows10-ltsc.iso",
    "boot_mode": "uefi"
  },
  "wizard": {
    "enabled": true
  },
  "metadata": {
    "source_layout": "distribution/windows10-entertainment/partition-layout.json",
    "requires_device_db": true,
    "device_db_endpoints": {
      "status": "/api/sonic/db/status",
      "rebuild": "/api/sonic/db/rebuild",
      "export": "/api/sonic/db/export",
      "devices": "/api/sonic/devices"
    },
    "preferred_shells": {
      "media": "kodi",
      "games": "playnite",
      "steam": "sub-module"
    }
  }
}
